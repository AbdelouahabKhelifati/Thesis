{
  "type" : "index_parallel",
  "spec" : {
    "dataSchema" : {
      "dataSource" : "master",
      "dimensionsSpec" : {
        "dimensions" : [
          { "name": "dim", "type": "double" }
        ]
      },
      "timestampSpec": {
        "column": "time",
        "format": "iso"
      },
      "metricsSpec" : [],
      "granularitySpec" : {
        "type" : "uniform",
        "segmentGranularity" : "day",
        "queryGranularity" : "second",
        "rollup" : false
      }
    },
    "ioConfig" : {
      "type" : "index_parallel",
      "inputSource" : {
        "type" : "local",
        "baseDir" : "<base_dir>",
        "filter" : "data*"
      },
      "inputFormat" :  {
        "type": "json"
      },
      "appendToExisting" : false
    },
    "tuningConfig" : {
      "type" : "index_parallel",
      "incrementalIndexType" : "oak",
      "maxNumConcurrentSubTasks" : 2,
      "partitionsSpec" : {
        "type": "dynamic",
        "maxRowsPerSegment": 5000,
        "maxTotalRows": 3000001
      },
      "splitHintSpec" : {
        "type" : "maxSize",
        "maxSplitSize" : 268435456
      }
    }
  }
}
